<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>za.ac.nwu.shawa</groupId>
		<artifactId>shawa</artifactId>
		<version>1.0</version>
	</parent>

	<artifactId>shawa-web</artifactId>
	<packaging>war</packaging>

	<name>NWU workflow web app</name>

	<dependencies>

		<!-- Backbone dependencies -->
		<dependency>
			<groupId>coza.opencollab.backbone</groupId>
			<artifactId>backbone-api</artifactId>
		</dependency>
		<dependency>
			<groupId>coza.opencollab.backbone</groupId>
			<artifactId>backbone-services</artifactId>
		</dependency>
		<dependency>
			<groupId>coza.opencollab.backbone</groupId>
			<artifactId>backbone-web</artifactId>
			<type>war</type>
		</dependency>
		
		<!-- Workflow dependencies -->
		<dependency>
			<groupId>nwu.workflow</groupId>
			<artifactId>leave-application</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>nwu.workflow</groupId>
			<artifactId>pay-advice</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>

		<!-- Java ee -->
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>par-kim-impl</artifactId>
			<version>2.1.6-NWU-0.11-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc6</artifactId>
			<version>11.2.0.3</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>nwu-workflow</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>coza.opencollab.backbone</groupId>
							<artifactId>backbone-web</artifactId>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
			<!-- JBoss AS plugin to deploy war -->
			<plugin>
				<groupId>org.jboss.as.plugins</groupId>
				<artifactId>jboss-as-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>maven-snapshots</id>
			<url>http://kualidev.nwu.ac.za:8082/nexus/content/repositories/snapshots</url>
			<layout>default</layout>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	
</project>
